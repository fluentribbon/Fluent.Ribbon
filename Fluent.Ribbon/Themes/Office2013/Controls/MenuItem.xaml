                       StrokeThickness="0"
                       HorizontalAlignment="Right"
                       Margin="0,0,6,1"
                       VerticalAlignment="Bottom"
                       Width="2"
                       Height="2" />
            <Rectangle Fill="#FFB5BEC7"
                       StrokeThickness="0"
                       HorizontalAlignment="Right"
                       Margin="0,0,3,2"
                       VerticalAlignment="Bottom"
                       Width="2"
                       Height="2" />
